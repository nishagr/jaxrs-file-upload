package com.gs.utils;

public class FileAdapter {
	public FileHandler getFileHandler(String extension, String filePath) {
		if (extension == null)
			return null;
		switch (extension.toLowerCase()) {
		case "csv":
			return new CSVFileHandler(filePath);
		case "xls":
		case "xlsx":
			return new ExcelFileHandler(filePath);
		default:
			return null;
		}
	}
}
